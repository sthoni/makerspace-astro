---
import { Image } from "astro:assets";
import loetkolben from "../assets/loetkolben.jpg";
import printer from "../assets/3dprinter.jpg";
import pcs from "../assets/pcs.jpg";

import type { CollectionEntry } from "astro:content";
import BlogCard from "./BlogCard.astro";

interface Props {
  posts?: [CollectionEntry<"blog">];
}

const { posts } = Astro.props;
---

<ul class="list">
  {
    posts.map((post) => (
      <li class="item">
        <BlogCard post={post} />
      </li>
    ))
  }
</ul>

<style>
  .list {
    display: flex;
    gap: 1rem;
    background-color: var(--surface-1);
    list-style: none;
    overflow-x: scroll;
    scroll-snap-type: x mandatory;
    max-width: calc(var(--max-text-width) + 20rem);
    margin: 0 auto;
    border: var(--brand) solid 8px;
  }

  .item {
    flex-shrink: 0;
    max-width: 100%;
    background-color: #fff;
    scroll-snap-align: center;
  }

  .item img {
    max-width: 100%;
  }

  @media screen and (max-width: 768px) {
    .list {
      border: 0;
    }
  }
</style>

<script>
  const list = document.querySelector(".list");
  const posts = document.querySelectorAll(".item");
  const image_el = posts[0];
  let image_width = 0;

  function set_image_width() {
    if (image_el != null) {
      image_width = image_el.clientWidth;
      console.log(image_width);
    }
  }

  set_image_width();
  window.onresize = set_image_width;

  let image_number = 0;
  setInterval(() => {
    if (image_number < posts.length) {
      image_number += 1;
    } else {
      image_number = 0;
    }
    list?.scroll({
      left: image_number * image_width,
      behavior: "smooth",
    });
  }, 5000);
</script>
